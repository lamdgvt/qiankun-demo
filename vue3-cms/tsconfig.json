{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		// 这样就可以对 `this` 上的数据属性进行更严格的推断
		"jsx": "preserve",
		"moduleResolution": "node",
		"lib": ["esnext", "dom"],
		"types": ["node", "vite/client"],
		"paths": {
			"@/*": ["./src/*"]
		},
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
	"exclude": ["node_modules", "dist"]
}
